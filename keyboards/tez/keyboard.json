{
    "keyboard_name": "Tez V3 - Travel Easy",
    "manufacturer": "Yehonatan Elentok",
    "url": "",
    "maintainer": "Yehonatan Elentok",
    "usb": {
        "vid": "0x444D",
        "pid": "0x3536",
        "device_version": "1.0.0"
    },
    "matrix_pins": {
        "rows": [ "B3", "B2", "B6", "B4"]
        "cols": [ "D0", "D4", "C6", "D7", "E6" ],
    },
    "diode_direction": "COL2ROW",
    "debounce": 5,
    "split": {
        "enabled": true,
        "soft_serial_pin": "D1",
        "usb_detect": {
            "enabled": true
        },
        "matrix_pins": {
            "right": {
                "cols": [ "E6", "D7", "C6", "D4", "D0" ],
            },
        },
        "transport": {
            "protocol": "serial",
            "watchdog": true
            "sync": {
                "layer_state": true
            },
        },
    },
    "processor": "atmega32u4",
    "bootloader": "caterina",
    "features": {
        "bootmagic": true,
        "mousekey": true,
        "extrakey": true,
        "console": false,
        "command": false,
        "combo":false,
        "nkro": true,
        "backlight": false,
        "rgb_matrix": false,
        "rgblight": true,
        "audio": false
    },
    "tapping": {
        "permissive_hold": true,
        "term": 150
    },
    "rgblight" : {
        "led_count": 4,
        "sleep": true,
        "default": {
            "on": true,
            "val": 100,
            "animation": "rainbow_mood",
        },
        "max_brightness": 5,
        "brightness_steps": 100,
        "animations": {
            "breathing": true,
            "knight": true,
            "snake": true,
            "rainbow_mood": true,
        }
        "layers" : {
            "blink": false,
            "enabled": true,
        }

        "split": true,
        "split_count": [2, 2]
    },
    "ws2812" : {
        "pin": "B5",
    },
